<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Swallows.Desktop.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
        x:Class="Swallows.Desktop.Views.SeoAuditWindow"
        x:DataType="vm:SeoAuditViewModel"
        Title="SEO Audit Report"
        Width="1200" Height="700"
        MinWidth="800" MinHeight="500"
        Background="#F6F7F8"
        FontFamily="Inter"
        Icon="/Assets/swallows.png">

    <Design.DataContext>
        <vm:SeoAuditViewModel/>
    </Design.DataContext>

    <Window.Styles>
        <Style Selector="TextBlock.h1">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#0F172A"/>
        </Style>
        <Style Selector="TextBlock.h2">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#0F172A"/>
        </Style>
        <Style Selector="TextBlock.body">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#64748B"/>
        </Style>
        <Style Selector="Border.card">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BoxShadow" Value="0 1 3 0 #10000000"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20"/>
        </Style>
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#1392EC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="Button.primary:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#1182D2"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto, *"  Margin="30">
        
        <!-- Header Section -->
        <Grid Grid.Row="0" ColumnDefinitions="*, Auto" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="ðŸ“Š SEO Audit Report" Classes="h1"/>
                <TextBlock Text="{Binding SummaryText}" Classes="body" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                <Button Classes="primary" Command="{Binding ExportToCsvCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="ðŸ“„"/>
                        <TextBlock Text="Export CSV"/>
                    </StackPanel>
                </Button>
                <Button Classes="primary" Command="{Binding ExportToExcelCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="ðŸ“Š"/>
                        <TextBlock Text="Export Excel"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="20">
                <!-- Summary Cards -->
                <Border Classes="card" Padding="0">
                    <Grid RowDefinitions="Auto, *">
                        
                        <!-- Summary Cards Row -->
                <Grid Grid.Row="0" ColumnDefinitions="*, *, *, *" Margin="25,25,25,20">
                    <Grid.Styles>
                        <Style Selector="Grid > Border">
                            <Setter Property="Margin" Value="0,0,15,0"/>
                        </Style>
                        <Style Selector="Grid > Border:nth-last-child(1)">
                            <Setter Property="Margin" Value="0"/>
                        </Style>
                    </Grid.Styles>

                    <!-- Stat 1: Total Pages -->
                    <Border Grid.Column="0" Background="#E6F4FD" CornerRadius="12" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Pages Analyzed" Classes="body" FontSize="12"/>
                            <TextBlock Text="{Binding TotalPages}" Classes="h1" FontSize="36" Foreground="#1392EC" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Stat 2: Total Issues -->
                    <Border Grid.Column="1" Background="#FEF2F2" CornerRadius="12" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Total Issues" Classes="body" FontSize="12"/>
                            <TextBlock Text="{Binding TotalIssues}" Classes="h1" FontSize="36" Foreground="#DC2626" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Stat 3: Average Score -->
                    <Border Grid.Column="2" Background="#F3E8FF" CornerRadius="12" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Avg SEO Score" Classes="body" FontSize="12"/>
                            <TextBlock Text="{Binding AverageSeoScore, StringFormat='{}{0:F0}/100'}" Classes="h1" FontSize="36" Foreground="#9333EA" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Stat 4: Critical Pages -->
                    <Border Grid.Column="3" Background="#FFF7ED" CornerRadius="12" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Critical Pages" Classes="body" FontSize="12"/>
                            <TextBlock Text="{Binding CriticalIssues}" Classes="h1" FontSize="36" Foreground="#EA580C" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Data Table -->
                <Border Grid.Row="1" BorderBrush="#E2E8F0" BorderThickness="0,1,0,0">
                    <DataGrid ItemsSource="{Binding AuditItems}" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal" 
                              BorderThickness="0"
                              CanUserResizeColumns="True"
                              RowBackground="White" 
                              HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="URL" Binding="{Binding Url}" Width="250"/>
                            <DataGridTextColumn Header="Title Status" Binding="{Binding TitleStatus}" Width="120"/>
                            <DataGridTextColumn Header="Meta Status" Binding="{Binding MetaStatus}" Width="120"/>
                            <DataGridTextColumn Header="H1 Status" Binding="{Binding H1Status}" Width="100"/>
                            <DataGridTextColumn Header="Missing Alt" Binding="{Binding MissingAlt}" Width="90"/>
                            <DataGridTextColumn Header="Broken Links" Binding="{Binding BrokenLinks}" Width="100"/>
                            <DataGridTextColumn Header="Words" Binding="{Binding WordCount}" Width="70"/>
                            <DataGridTextColumn Header="SEO Score" Binding="{Binding SeoScore}" Width="120"/>
                            <DataGridTextColumn Header="Issues (#)" Binding="{Binding IssueCount}" Width="80"/>
                            <DataGridTextColumn Header="Top Issues" Binding="{Binding TopIssues}" Width="300"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Border>
        
        <!-- Charts Section -->
        <TextBlock Text="ðŸ“Š Data Visualizations" Classes="h2" Margin="0,10,0,0"/>
        
        <!-- Row 1: SEO Score & Status Codes -->
        <Grid ColumnDefinitions="*, *" >
            <Border Classes="card" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="SEO Score Distribution" Classes="h2" FontSize="16" Margin="0,0,0,15"/>
                    <lvc:PieChart Series="{Binding SeoScoreSeries}" 
                                  LegendPosition="Right" 
                                  Height="250"/>
                    <TextBlock Classes="body" FontSize="11" Foreground="#64748B" Margin="0,10,0,0" TextWrapping="Wrap">
                        <Run Text="ðŸ’¡ "/><Run FontWeight="SemiBold" Text="Interpretation: "/>
                        <Run Text="Green = optimized pages, Orange = needs improvement, Red = high priority. Aim for 70%+ green pages."/>
                    </TextBlock>
                </StackPanel>
            </Border>
            
            <Border Grid.Column="1" Classes="card" Margin="10,0,0,0">
                <StackPanel>
                    <TextBlock Text="HTTP Status Codes" Classes="h2" FontSize="16" Margin="0,0,0,15"/>
                    <lvc:PieChart Series="{Binding StatusCodeSeries}" 
                                  LegendPosition="Right" 
                                  Height="250"/>
                    <TextBlock Classes="body" FontSize="11" Foreground="#64748B" Margin="0,10,0,0" TextWrapping="Wrap">
                        <Run Text="ðŸ’¡ "/><Run FontWeight="SemiBold" Text="Interpretation: "/>
                        <Run Text="200 = OK, 404 = not found, 500 = server error. Ideally you should have only 200 codes. 4xx/5xx codes indicate broken links or errors."/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Row 2: Top Issues & Word Count -->
        <Grid ColumnDefinitions="*, *">
            <Border Classes="card" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Top SEO Issues" Classes="h2" FontSize="16" Margin="0,0,0,15"/>
                    <lvc:CartesianChart Series="{Binding TopIssuesSeries}" 
                                        Height="250"/>
                    <TextBlock Classes="body" FontSize="11" Foreground="#64748B" Margin="0,10,0,0" TextWrapping="Wrap">
                        <Run Text="ðŸ’¡ "/><Run FontWeight="SemiBold" Text="Action: "/>
                        <Run Text="The 5 most frequent issues on your site. Start by fixing the top one to improve the highest number of pages."/>
                    </TextBlock>
                </StackPanel>
            </Border>
            
            <Border Grid.Column="1" Classes="card" Margin="10,0,0,0">
                <StackPanel>
                    <TextBlock Text="Content Length Distribution" Classes="h2" FontSize="16" Margin="0,0,0,15"/>
                    <lvc:CartesianChart Series="{Binding WordCountSeries}" 
                                        Height="250"/>
                    <TextBlock Classes="body" FontSize="11" Foreground="#64748B" Margin="0,10,0,0" TextWrapping="Wrap">
                        <Run Text="ðŸ’¡ "/><Run FontWeight="SemiBold" Text="Recommendation: "/>
                        <Run Text="Content under 300 words is considered 'thin content'. For better ranking, aim for 600+ words for articles and 1000+ for guides."/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Row 3: Technical Features (Donut) -->
        <Border Classes="card">
            <StackPanel>
                <TextBlock Text="Technical SEO Features" Classes="h2" FontSize="16" Margin="0,0,0,15"/>
                <TextBlock Text="Pages with technical features implemented" Classes="body" FontSize="12" Margin="0,0,0,10"/>
                <lvc:PieChart Series="{Binding TechnicalFeaturesSeries}" 
                              LegendPosition="Bottom" 
                              Height="300"/>
                <TextBlock Classes="body" FontSize="11" Foreground="#64748B" Margin="0,10,0,0" TextWrapping="Wrap">
                    <Run Text="ðŸ’¡ "/><Run FontWeight="SemiBold" Text="Best Practice: "/>
                    <Run Text="Viewport meta: mobile-friendly. Open Graph: social preview. Twitter Card: Twitter sharing. Canonical: avoids duplicates. Goal: 100% on all."/>
                </TextBlock>
            </StackPanel>
        </Border>
        
        <!-- Row 4: Content Categories from Titles -->
        <Border Classes="card">
            <StackPanel>
                <TextBlock Text="ðŸ“š Content Categories" Classes="h2" FontSize="16" Margin="0,0,0,15"/>
                <TextBlock Text="Topics and themes extracted from page titles - top 8 categories" Classes="body" FontSize="12" Margin="0,0,0,10"/>
                <lvc:PieChart Series="{Binding CategorySeries}" 
                              LegendPosition="Right" 
                              Height="300"/>
                <TextBlock Classes="body" FontSize="11" Foreground="#64748B" Margin="0,10,0,0" TextWrapping="Wrap">
                    <Run Text="ðŸ’¡ "/><Run FontWeight="SemiBold" Text="Insight: "/>
                    <Run Text="Shows main site topics based on titles. Balanced categories = good content variety. One dominant category = specific niche."/>
                </TextBlock>
            </StackPanel>
        </Border>
        
    </StackPanel>
</ScrollViewer>
    </Grid>
</Window>
